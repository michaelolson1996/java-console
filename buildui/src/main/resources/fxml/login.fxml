<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.layout.VBox?>
<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXTextField?>
<?import com.jfoenix.controls.JFXPasswordField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.text.Font?>

<StackPane stylesheets="@../styles/main.css"
           xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.buildui.ui.login.LoginController">
    <children>
        <VBox id="login-container" maxWidth="560" maxHeight="480">
            <HBox alignment="TOP_CENTER" minWidth="560" minHeight="35">
                <children>
                    <HBox alignment="CENTER_LEFT" minWidth="440">
                        <Text id="login-title">Etnata Login</Text>
                    </HBox>
                    <HBox alignment="CENTER_RIGHT" minWidth="80" spacing="10">
                        <children>
                            <Button id="maximize-button" styleClass="control-buttons"></Button>
                            <Button id="minimize-button" styleClass="control-buttons"></Button>
                            <Button id="exit-button" styleClass="control-buttons" onAction="#exit"></Button>
                        </children>
                    </HBox>
                </children>
            </HBox>
            <HBox prefHeight="140" alignment="BOTTOM_CENTER">
                <children>
                    <JFXTextField fx:id="username" styleClass="login_inputs" labelFloat="true" prefHeight="33.0" prefWidth="300.0" promptText="Username"></JFXTextField>
                </children>
            </HBox>
            <HBox prefHeight="80" alignment="BOTTOM_CENTER">
                <JFXPasswordField fx:id="password" styleClass="login_inputs" labelFloat="true" prefHeight="33.0"
                                  prefWidth="300.0" promptText="Password"/>
            </HBox>
            <HBox prefHeight="120" alignment="CENTER">
                <HBox prefWidth="140" alignment="CENTER">
                    <JFXButton onAction="#handleLoginButtonAction" styleClass="login-button" text="Log In"></JFXButton>
                </HBox>
                <HBox prefWidth="140" alignment="CENTER">
                    <JFXButton styleClass="login-button" text="Sign Up"></JFXButton>
                </HBox>
            </HBox>
            <Button id="forgot-button" alignment="BOTTOM_CENTER" minHeight="84" maxWidth="560">
                <font>
                    <Font size="14.0" />
                </font>
                I forgot my password / username
            </Button>
        </VBox>
    </children>
</StackPane>